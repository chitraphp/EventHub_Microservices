@model WebMvc.Models.Event




<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.ImageUrl" />
    <input class="esh-catalog-button" type="submit" value="[ REGISTER ]" />
    <div class="esh-catalog-name">
        <span>@Model.Title</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
    <input type="hidden" asp-for="@Model.EventType" name="type" />
    <input type="hidden" asp-for="@Model.EventTypeId" name="typeId" />
    <input type="hidden" asp-for="@Model.EventCategory" name="category" />
    <input type="hidden" asp-for="@Model.EventCategoryId" name="categoryId" />
    <input type="hidden" asp-for="@Model.EventDescription" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Title" name="title" />
    <input type="hidden" asp-for="@Model.ImageUrl" name="imageUrl" />
    <input type="hidden" asp-for="@Model.Address" name="address" />
    <input type="hidden" asp-for="@Model.City" name="city" />
    <input type="hidden" asp-for="@Model.State" name="state" />
    <input type="hidden" asp-for="@Model.StartDate" name="startDate" />
    <input type="hidden" asp-for="@Model.Zipcode" name="zipCode" />
    <input type="hidden" asp-for="@Model.OrganizerId" name="organizerId" />
    <input type="hidden" asp-for="@Model.OrganizerName" name="organizerName" />

</form>